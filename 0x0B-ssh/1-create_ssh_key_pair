#!/bin/bash

# Check if the school private key already exists
if [ -f school ]; then
    echo "Key pair 'school' already exists."
    exit 1
fi

# Generate the RSA key pair
ssh-keygen -t rsa -b 4096 -C "Generated key for school" -f school

# Check if the key generation was successful
if [ $? -eq 0 ]; then
    echo "RSA key pair 'school' created successfully."
else
    echo "Error: RSA key pair creation failed."
    exit 1
fi
